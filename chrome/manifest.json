{
  "manifest_version": 2,
  "name": "Trello-Github integration",
  "version": "0.2.1",
  "content_scripts": [
    {
      "matches": [
        "http://trello.com/*",
        "https://trello.com/*"
      ],
      "css": [
        "css/grid.css",
        "main.css"
      ],
      "js": [
        "js/polyfills.js",
        "main.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "options.html"
  ]
}
